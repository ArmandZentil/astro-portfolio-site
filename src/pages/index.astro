---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/landing/Header.astro";
import Content from "../components/landing/Content.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Armand Zentil"
  description="Portfolio of Armand Zentil"
  canonical="https://www.armandzentil.com"
  openGraph={{
    url: "https://www.armandzentil.com",
    title: "Armand Zentil",
    description: "Portfolio of Armand Zentil",
    images: [
      {
        url: "https://www.armandzentil.com",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.armandzentil.com",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.armandzentil.com" },
      { url: "https://www.armandzentil.com" },
    ],
    site_name: "Armand Zentil",
  }}
  twitter={{
    handle: "@KryptoUnikorn",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Header />
  <Content />
</BaseLayout>
